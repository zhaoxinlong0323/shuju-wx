
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.listtype {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  transition: all 300ms ease;
  padding: 0 0 0 40rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}

.blue {
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: #1296db;
}

.red {
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: #d4237a;
}